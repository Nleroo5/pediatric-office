    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f8fdf5 0%, #e8f5d8 50%, #d4e8b8 100%);
            background-size: 200% 200%;
            animation: gradientShift 20s ease-in-out infinite;
            position: relative;
            overflow-x: hidden;
        }

        @keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        /* Enhanced Glass Morphism */
        .glass-card {
            background: linear-gradient(135deg,
                rgba(255, 255, 255, 0.98) 0%,
                rgba(254, 252, 245, 0.95) 50%,
                rgba(249, 245, 230, 0.98) 100%);
            border: 2px solid rgba(59, 157, 132, 0.2);
            border-radius: 20px;
            box-shadow:
                0 15px 35px rgba(0, 0, 0, 0.1),
                0 5px 15px rgba(59, 157, 132, 0.1),
                inset 0 1px 0 rgba(255, 255, 255, 0.8);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            backdrop-filter: blur(10px);
        }

        .accessibility-section {
            margin-bottom: 2rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 12px;
            border-left: 4px solid #3B9D84;
        }

