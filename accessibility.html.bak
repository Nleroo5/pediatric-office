            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .feature-box {
            background: linear-gradient(135deg, rgba(59, 157, 132, 0.1), rgba(80, 179, 238, 0.1));
            border: 2px solid rgba(59, 157, 132, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        /* Animal navigation styles */
        .animal-nav-item {
            opacity: 0;
            transform: translateY(-100px) scale(0.8);
            transition: all 1s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        }

        .animal-nav-item.animate-in {
            opacity: 1;
            transform: translateY(0) scale(1);
        }

        .animal-nav-item:nth-child(1) { animation-delay: 0.1s; }
        .animal-nav-item:nth-child(2) { animation-delay: 0.3s; }
        .animal-nav-item:nth-child(3) { animation-delay: 0.5s; }
        .animal-nav-item:nth-child(4) { animation-delay: 0.7s; }
        .animal-nav-item:nth-child(5) { animation-delay: 0.9s; }

        .footer-privia-mobile {
            display: none;
        }

        @media (max-width: 768px) {
            .contact-btn-mobile {
                background: #3B9D84 !important;
                color: white !important;
                padding: 0.5rem 1rem !important;
                font-size: 0.75rem !important;
                border-radius: 9999px !important;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1) !important;
            }

            .mobile-hamburger-nav {
                top: 1rem !important;
                left: 1rem !important;
                right: auto !important;
            }

            .mobile-hamburger-nav button {
                background: white !important;
                padding: 0.75rem !important;
            }

            .mobile-hamburger-nav .hamburger-icon span {
                background: #3B9D84 !important;
                border-radius: 2px !important;
            }

            .contact-btn-container-mobile {
                top: 1rem !important;
                right: 1rem !important;
            }

            /* Compact Mobile Footer */
            footer {
                padding-top: 2rem !important;
                padding-bottom: 2rem !important;
            }

            .footer-privia-section {
                display: none !important;
            }

            .footer-privia-mobile {
                display: block !important;
                text-align: center;
                font-size: 1rem;
                color: #9CA3AF;
                margin-bottom: 1rem;
                padding-bottom: 1rem;
                border-bottom: 1px solid #374151;
            }

            .footer-providers-section {
                display: none !important;
            }

            .footer-main-grid {
                grid-template-columns: 1fr 1fr !important;
                gap: 1.5rem !important;
            }

            .footer-logo img {
                height: 3rem !important;
            }

            .footer-copyright {
                margin-top: 1.5rem !important;
                padding-top: 1.5rem !important;
            }

            .footer-tagline {
                display: none !important;
            }

            /* Hide animal navigation on mobile */
            #animal-nav {
                display: none !important;
            }

            /* Reduce hero section spacing on mobile */
            section[class*="pt-80"] {
                padding-top: 12rem !important;
                padding-bottom: 3rem !important;
            }
        }

        /* Show animal navigation on desktop */
        @media (min-width: 769px) {
            #animal-nav {
                display: block !important;
            }
        }

        /* High contrast mode support */
        @media (prefers-contrast: high) {
            .accessibility-section {
                background: rgba(255, 255, 255, 0.95);
                border-left-width: 6px;
            }
        }

        /* Reduced motion support */
        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
